ip a add 172.16.4.1/22 dev eth0
ip link set dev eth0 up
ip a add 10.0.20.1/24 dev eth1
ip link set dev eth1 up
ip r add default via 10.0.20.254

iptables -P INPUT DROP
iptables -P FORWARD DROP
iptables -P OUTPUT DROP

iptables -A INPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A OUTPUT -m state --state ESTABLISHED,RELATED -j ACCEPT
iptables -A FORWARD -m state --state ESTABLISHED,RELATED -j ACCEPT

# DNS
iptables -A FORWARD -s 172.16.4.0/22 -d 172.16.3.29 -p udp --dport 53 -j ACCEPT
iptables -A FORWARD -d 172.16.4.0/22 -s 172.16.3.29 -p udp --sport 53 -j ACCEPT

# Accès S public / intranet (443)
iptables -A FORWARD -s 172.16.4.0/22 -d 172.16.3.28 -p tcp --dport 443 -j ACCEPT
iptables -A FORWARD -s 172.16.4.0/22 -d 172.16.3.28 -p tcp --dport 80 -j ACCEPT

# Mail (IMAPS)
iptables -A FORWARD -s 172.16.4.0/22 -d 172.16.21.2 -p tcp --dport 993 -j ACCEPT

# Internet HTTP/HTTPS
iptables -A FORWARD -s 172.16.4.0/22 -o eth1 -p tcp --dport 80 -j ACCEPT
iptables -A FORWARD -s 172.16.4.0/22 -o eth1 -p tcp --dport 443 -j ACCEPT

#Ping 
iptables -A FORWARD -d 172.16.4.0/24 -p icmp --icmp-type echo-request -j ACCEPT
iptables -A FORWARD -s 172.16.4.0/24 -p icmp --icmp-type echo-reply -j ACCEPT


#Faire passer l'accès ssh
iptables -A INPUT -p tcp --dport 22 -s 172.16.21.0/24 -j ACCEPT

#Recevoir l'accès SSH
iptables -A INPUT -p tcp --dport 22 -s 172.16.21.0/24 -j ACCEPT
